    // "player": "com.github.th_ch.youtube_music",
    "status-icons": {
      "playing": "‚è∏",
      "paused": "‚ñ∂",
    },
    "max-length": 60,
    "ignore-players": ["vivaldi"],
  },
  "memory": {
    "interval": 30,
    "format": "{}% ÔÉâ",
    "max-length": 10,
  },
  "temperature": {
    // "thermal-zone": 2,
    // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
    // "critical-threshold": 80,
    // "format-critical": "{temperatureC}¬∞C Ôãá",
    "format": "{temperatureC}¬∞C Ôãâ",
  },
}

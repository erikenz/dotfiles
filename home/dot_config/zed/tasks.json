// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
//
// Example:
[
  {
    "label": "Example task",
    "command": "for i in {1..5}; do echo \"Hello $i/5\"; sleep 1; done",
    //"args": [],
    // Env overrides for the command, will be appended to the terminal's environment from the settings.
    "env": { "foo": "bar" },
    // Current working directory to spawn the command into, defaults to current project root.
    //"cwd": "/path/to/working/directory",
    // Whether to use a new terminal tab or reuse the existing one to spawn the process, defaults to `false`.
    "use_new_terminal": false,
    // Whether to allow multiple instances of the same task to be run, or rather wait for the existing ones to finish, defaults to `false`.
    "allow_concurrent_runs": false,
    // What to do with the terminal pane and tab, after the command was started:
    // * `always` — always show the task's pane, and focus the corresponding tab in it (default)
    // * `no_focus` — always show the task's pane, add the task's tab in it, but don't focus it
    // * `never` — do not alter focus, but still add/reuse the task's tab in its pane
    "reveal": "always",
    // Where to place the task's terminal item after starting the task:
    // * `dock` — in the terminal dock, "regular" terminal items' place (default)
    // * `center` — in the central pane group, "main" editor area
    "reveal_target": "dock",
    // What to do with the terminal pane and tab, after the command had finished:
    // * `never` — Do nothing when the command finishes (default)
    // * `always` — always hide the terminal tab, hide the pane also if it was the last tab in it
    // * `on_success` — hide the terminal tab on task success only, otherwise behaves similar to `always`
    "hide": "never",
    // Which shell to use when running a task inside the terminal.
    // May take 3 values:
    // 1. (default) Use the system's default terminal configuration in /etc/passwd
    //      "shell": "system"
    // 2. A program:
    //      "shell": {
    //        "program": "sh"
    //      }
    // 3. A program with arguments:
    //     "shell": {
    //         "with_arguments": {
    //           "program": "/bin/bash",
    //           "args": ["--login"]
    //         }
    //     }
    "shell": "system",
    // Whether to show the task line in the output of the spawned task, defaults to `true`.
    "show_summary": true,
    // Whether to show the command line in the output of the spawned task, defaults to `true`.
    "show_command": true
    // Represents the tags for inline runnable indicators, or spawning multiple tasks at once.
    // "tags": []
  },
  {
    "label": "Lazygit",
    "command": "lazygit -p $ZED_WORKTREE_ROOT",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "reveal_target": "center"
  },
  {
    "label": "Oil",
    "command": "bash -c 'oil-zed \"$(dirname \"$ZED_FILE\" 2>/dev/null || echo \"$ZED_WORKTREE_ROOT\")\"'",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "reveal_target": "center"
  },
  {
    "label": "Oil Float",
    "command": "bash -c 'oil-float \"$(dirname \"$ZED_FILE\" 2>/dev/null || echo \"$ZED_WORKTREE_ROOT\")\"'",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "reveal_target": "center"
  },
  {
    "label": "Oil Simple",
    "command": "bash -c 'oil-simple \"$(dirname \"$ZED_FILE\" 2>/dev/null || echo \"$ZED_WORKTREE_ROOT\")\"'",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "on_success"
  },
  {
    "label": "Yazi",
    "command": "ya_zed $ZED_FILE",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "on_success",
    "reveal_target": "center"
  },
  {
    "label": "File Finder",
    "command": "zed --add \"$(tv files)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Find in Files",
    "command": "zed --add \"$(tv text)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Find Directories",
    "command": "zed --add \"$(tv dirs)\"",
    "hide": "always",
    "allow_concurrent_runs": true,
    "use_new_terminal": true
  },
  {
    "label": "Obsidian",
    "command": "cd ~/.config/obsidian && zed --add \"$(tv files)\"",
    "hide": "always",
    "allow_concurrent_runs": false,
    "use_new_terminal": true
  },
  {
    "label": "Debug Zed Vars",
    "command": "bash -c 'echo \"ZED_FILE: $ZED_FILE\" && echo \"ZED_WORKTREE_ROOT: $ZED_WORKTREE_ROOT\" && echo \"PWD: $PWD\" && echo \"Current dir from ZED_FILE: $(dirname \"$ZED_FILE\" 2>/dev/null || echo \"ZED_FILE not set\")\" && echo \"Press enter to continue...\" && read'",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "reveal_target": "center"
  },
  {
    "label": "Debug Oil Zed",
    "command": "bash -c 'TARGET_DIR=\"$(dirname \"$ZED_FILE\" 2>/dev/null || echo \"$ZED_WORKTREE_ROOT\")\" && echo \"Target directory: $TARGET_DIR\" && echo \"Testing oil-zed...\" && oil-zed --help 2>&1 || echo \"oil-zed failed, trying direct call...\" && which oil-zed && echo \"Press enter to continue...\" && read'",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "reveal_target": "center"
  },
  {
    "label": "Debug Oil Float",
    "command": "bash -c 'TARGET_DIR=\"$(dirname \"$ZED_FILE\" 2>/dev/null || echo \"$ZED_WORKTREE_ROOT\")\" && echo \"Target directory: $TARGET_DIR\" && echo \"Testing oil-float...\" && oil-float --help 2>&1 || echo \"oil-float failed, trying direct call...\" && which oil-float && echo \"Press enter to continue...\" && read'",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "reveal_target": "center"
  },
  {
    "label": "Debug Step by Step",
    "command": "bash -c 'echo \"ZED_FILE: $ZED_FILE\" && echo \"Step 1: dirname of ZED_FILE\" && STEP1=$(dirname \"$ZED_FILE\" 2>/dev/null) && echo \"STEP1 result: $STEP1\" && echo \"Step 2: fallback check\" && STEP2=\"$STEP1\" && if [ -z \"$STEP2\" ]; then STEP2=\"$ZED_WORKTREE_ROOT\"; fi && echo \"STEP2 result: $STEP2\" && echo \"Step 3: calling oil-zed with: $STEP2\" && echo \"Press enter to continue...\" && read'",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "hide": "never",
    "reveal_target": "center"
  }
]
